<h2>Write Review</h2>
<%= form_tag(review_path(@item), method: :post) do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, @review.title %>

  <%= label_tag :rating %>
  <%= number_field_tag :rating, @review.rating %>

  <%= label_tag :content %>
  <%= text_field_tag :content, @review.content %>

  <%= submit_tag 'Create Review' %>
<% end %>
