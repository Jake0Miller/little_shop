<% if @merchant %>
  <h1>All Items For <%= link_to @merchant.name, merchant_path(@merchant) %></h1>
  <%= link_to 'New Item', new_item_path(@merchant) %>
<% else %>
  <h1>All Items</h1>
<% end %>

<% @items.each do |item| %>
  <section id='item-<%= item.id%>'>
    <h2><%= link_to item.name, item_path(item) %></h2>
    <%= render 'description', item: item %>
  </section>
<% end %>
